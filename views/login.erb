<div class="login">
<form class="form-horizontal" action="/login" method="post">
  <h3 class="form-horizontal-heading">Login</h3><% if @message %>
    <%= @message %>
    <% end %>
  <div class="form-group">
    <label for="name" class="col-sm-2 control-label first">Username</label>
    <div class="col-sm-4">
      <input type="text" class="form-control" id="name" name="user_name" placeholder="username">
    </div>
  </div>
  <div class="form-group">
    <label for="Password" class="col-sm-2 control-label first">Password</label>
    <div class="col-sm-4">
      <input type="password" class="form-control" id="password" name="password" placeholder="your password">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input class="btn btn-default" type="submit" value="Login">
    </div>
  </div>
</form>
</div>
<div class="register">
<form class="form-horizontal" action="/register" method="post">
  <h3 class="form-horizontal-heading">Register</h3>
  <div class="form-group">
    <label for="new_name" class="col-sm-2 control-label first">Username</label>
    <div class="col-sm-4">
      <input type="text" class="form-control" id="new_name" name="user_name" placeholder="username">
    </div>
  </div>
  <div class="form-group">
    <label for="new_email" class="col-sm-2 control-label first">Email</label>
    <div class="col-sm-4">
      <input type="email" class="form-control" id="new_email" name="user_email" placeholder="your email">
    </div>
  </div>
  <div class="form-group">
    <label for="new_password" class="col-sm-2 control-label first">Password</label>
    <div class="col-sm-4">
      <input type="password" class="form-control" id="new_password" name="password" placeholder="password">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input class="btn btn-default" type="submit" value="Register">
    </div>
  </div>
</form>

</div>
