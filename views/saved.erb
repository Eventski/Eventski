<h2>Saved Events</h2>

<nav class="navbar navbar-dark bg-faded">
  <ul class="nav navbar-nav">
    <li class="nav-item">
      <a class="nav-link" href="#">Your Shows</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="#">Home</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="#">Search</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="/logout">Logout</a>
    </li>
  </ul>
</nav>

<table class="table table-striped table-hover table-responsive">
  <thead>
    <th>
      day
    </th>
    <th>
      show
    </th>
    <th>
      url
    </th>
    <th>
      remove?
    </th>
  </thead>

<tbody>
  <% @saved.each do |saved|%>
  <tr class="active">
    <td>
      <%= saved.id %>
    </td>
    <td>
      <%= saved.day %>
    </td>
    <td>
      <%= saved.event_name %>
    </td>
    <td>
      <%= saved.event_url %>
    </td>
    <td>
     <form action="/events/events/destroy" method="post">
       <input type="hidden" name="id" value="<%= saved.id %>">
       <input type="submit" value="remove"></input>
     </form>
   </td>

  </tr>
</tbody>

  <% end %>
